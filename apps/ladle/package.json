{
  "private": true,
  "name": "@monorepo/ladle",
  "version": "1.0.0",
  "description": "UI Design System",
  "scripts": {
    "build": "run-p build:*",
    "build:ladle": "ladle build",
    "build:tailwind": "pnpx tailwindcss -i ./styles/global.css -o ./build/output.css",
    "dev": "run-p dev:*",
    "dev:ladle": "ladle dev",
    "dev:tailwind": "pnpx tailwindcss -i ./styles/global.css -o ./build/output.css --watch",
    "lint": "DEBUG=eslint:* eslint --ext js,jsx,ts,tsx,cjs,mjs .",
    "preview": "ladle preview"
  },
  "dependencies": {
    "clsx": "1.2.1"
  },
  "devDependencies": {
    "@ladle/react": "2.1.1",
    "@monorepo/tailwind": "workspace:*",
    "@monorepo/tsconfig": "workspace:*",
    "@types/react": "18.0.17",
    "@types/react-dom": "18.0.6",
    "npm-run-all": "4.1.5",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "vite": "3.0.8"
  }
}
