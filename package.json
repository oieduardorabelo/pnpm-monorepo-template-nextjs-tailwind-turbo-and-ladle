{
  "private": true,
  "name": "pnpm-monorepo-template-nextjs-tailwind-turbo-and-ladle",
  "version": "0.0.1",
  "scripts": {
    "build": "turbo run build",
    "code:format": "prettier --write './**/*.{js,ts,jsx,tsx,cjs}'",
    "code:format:packagejson": "prettier-package-json --write './package.json' './**/*/package.json'",
    "code:lint": "eslint --ext js,jsx,ts,tsx,cjs,mjs .",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "prepare": "husky install",
    "test": "turbo run test"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "5.33.0",
    "@typescript-eslint/parser": "5.33.0",
    "eslint": "8.21.0",
    "eslint-config-next": "12.2.5",
    "husky": "8.0.1",
    "lint-staged": "13.0.3",
    "prettier": "2.7.1",
    "prettier-package-json": "2.6.4",
    "prettier-plugin-tailwindcss": "0.1.13",
    "turbo": "1.4.3",
    "typescript": "4.7.4"
  },
  "engines": {
    "node": "16.x",
    "npm": "please-use-pnpm",
    "pnpm": "7.x",
    "yarn": "please-use-pnpm"
  }
}
