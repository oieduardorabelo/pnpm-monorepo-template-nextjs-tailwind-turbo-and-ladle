{
  "private": true,
  "name": "pnpm-monorepo-template-nextjs-tailwind-turbo-and-ladle",
  "version": "0.0.1",
  "scripts": {
    "build": "turbo run build",
    "code:format": "prettier --write './**/*.{js,jsx,ts,tsx,cjs,mjs}'",
    "code:format:packagejson": "prettier-package-json --write './package.json' './**/*/package.json'",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "lint:monorepo": "eslint --ext js,jsx,ts,tsx,cjs,mjs .",
    "prepare": "husky install",
    "test": "turbo run test"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "devDependencies": {
    "@monorepo/eslint": "workspace:*",
    "@monorepo/prettier": "workspace:*",
    "husky": "8.0.1",
    "lint-staged": "13.0.3",
    "turbo": "1.4.3",
    "typescript": "4.7.4"
  },
  "engines": {
    "node": "16.x",
    "npm": "please-use-pnpm",
    "pnpm": "7.x",
    "yarn": "please-use-pnpm"
  }
}
